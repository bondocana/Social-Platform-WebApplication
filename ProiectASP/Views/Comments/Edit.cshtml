@model ProiectASP.Models.Comment

@{
    ViewBag.Title = "Edit";
}

<h2> Editeaza comentariu </h2>
<br />

@using (Html.BeginForm(controllerName: "Comments", actionName: "Edit",
     method: FormMethod.Post, routeValues: new { id = Model.CommentId }))
{
    @Html.Label("Text", "Continut comentariu")

    <br />

    @Html.Editor("Text", new { @class = "form-control" })
        <br />

    @Html.ValidationMessage("Text", null, new { @class = "text-danger" })

    <br />

    <br />

    <button class="btn btn-outline-danger" type="submit">Modifica comentariul</button>

}

