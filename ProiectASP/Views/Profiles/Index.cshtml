<h2> Alti utilizatori </h2>

<br>
<hr />
<br />

@* Motorul de cautare *@
<form method="GET">
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Cautati alti utilizatori dupa nume sau prenume" name="search"
               value="@ViewBag.SearchString">
        <button class="btn btn-outline-danger" type="submit"> Cauta </button>
    </div>
</form>

<br />


@foreach (ProiectASP.Models.Profile profil in ViewBag.Profiles)
{

    @if (ViewBag.UserCurent != profil.UserId)
    {
        <div class="card">

            <div class="card-body">


                <div class="d-flex flex-row justify-content-between mt-4">

                    <span> @profil.First_Name @profil.Last_Name </span>

                    <a class="btn btn-outline-danger" href="/Profiles/Show/@profil.Id"> Afisare profil </a>

                </div>

            </div>

        </div>

        <br>
        <br>
    }

}

<div>
    <nav aria-label="Page navigation example">
        <div class="pagination d-flex justify-content-center">


                <li class="page-item">
                     <a class="page-link" href="@ViewBag.PaginationBaseUrl=1" aria-label="Previous">
                        <span aria-hidden="true" class="text-danger">&laquo;</span>
                    </a>
                </li>

            @for (int i = 1; i <= ViewBag.lastPage; i++)
            {
                        <li class="page-item"> <a class="page-link text-danger" href="@ViewBag.PaginationBaseUrl=@i">@(i)</a> </li>
            }

                <li class="page-item">
                    <a class="page-link" href="@ViewBag.PaginationBaseUrl=@(ViewBag.lastPage)" aria-label="Next">
                        <span aria-hidden="true" class="text-danger">&raquo;</span>
                     </a>
                </li>

        </div>
    </nav>
</div>



