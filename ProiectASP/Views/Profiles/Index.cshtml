@foreach (ProiectASP.Models.Profile profil in ViewBag.Profiles)
{
    @if (ViewBag.UserCurent == profil.UserId )
    {
            <div class="col-md-12 text-center">
                <a class="btn btn-danger btn-lg" href="/Profiles/Show/@profil.Id"> Afiseaza profilul meu </a>
            </div>

            <br />
